{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: custom task",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "${workspaceFolder}/src/**.c",
                // "-I",
                // "/usr/include/**",
                // "/usr/lib/**",
                // "${workspaceFolder}/src/**.h",
                "-o",
                "bin/main",
                "-lm"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}